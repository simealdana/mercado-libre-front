{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-tabs": 0,
        "no-mixed-spaces-and-tabs": 0,
        "jsx-a11y/anchor-is-valid": 0,
        "no-param-reassign": 0,
        "arrow-parens": [
          "warn",
          "as-needed"
        ],
        "comma-dangle": [
          "warn",
          "never"
        ],
        "import/no-cycle": [
          "off"
        ],
        "import/no-extraneous-dependencies": [
          "off"
        ],
        "jsx-a11y/click-events-have-key-events": 0,
        "jsx-a11y/no-onchange": "off",
        "jsx-a11y/no-static-element-interactions": 0,
        "max-len": [
          "error",
          120
        ],
        "newline-per-chained-call": "off",
        "no-console": [
          "warn",
          {
            "allow": [
              "tron"
            ]
          }
        ]
    }
}
